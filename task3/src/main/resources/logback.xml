<configuration scan="true" scanPeriod="10 seconds">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyyMMdd HH:mm:ss} [%thread] %level %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.dmaituganov.alfalab" level="info" />

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>